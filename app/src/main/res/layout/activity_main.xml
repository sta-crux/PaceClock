<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.stacrux.paceclock.ui.DelayedHorizontalScrollView
        android:id="@+id/mainHorizontalScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/paceClockLayout"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/topToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"
                    app:title="Pace Clock"
                    app:titleTextColor="@color/white"
                    android:background="@color/colorPrimary">

                </androidx.appcompat.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <include layout="@layout/pace_clock" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settingsLayout"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1000dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"
                    app:title="Settings"
                    app:titleTextColor="@color/white"
                    android:background="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <include layout="@layout/settings" />
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>


    </com.stacrux.paceclock.ui.DelayedHorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>